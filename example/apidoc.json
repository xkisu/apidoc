{
    "name": "Example API",
    "description": "This is an example API doc",
    "root": "/api",
    "version": 1,
    "defaults": {
        "responses": {
            "OK": {
                "code": 200
            },
            "ERR": {
                "code": 400,
                "template": {
                    "code": {
                        "type": "string",
                        "default": "UNKNOWN_ERROR"
                    },
                    "success": {
                        "type": "boolean",
                        "default": false
                    }
                }
            }
        }
    },
    "routes": {
        "root": {
            "name": "Root",
            "route": "/"
        },
        "params": {
            "name": "Parameters",
            "route": "/params/:name/:age",
            "description": "An example route that include parameters.",
            "parameters": {
                "name": {
                    "name": "Your Name",
                    "slug": "name",
                    "type": "string"
                },
                "age": {
                    "name": "Your Age",
                    "slug": "age",
                    "type": "number",
                    "description": "The number of years since you where born"
                }
            },
            "responses": {
                "MISSING": {
                    "code": 301,
                    "extends": "ERR",
                    "template": {
                        "code": {
                            "default": "MISSING_PARAMETER"
                        }
                    }
                }
            }
        }
    }
}